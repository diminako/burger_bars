<div class="background">

  <header>
    <h1>Retro Backlog</h1>
  </header>

  <main class="container">
    <div class="row gamesDiv">
      <div class="col-sm-6">
        <h2>Need to Complete</h2>
        <ul>

          {{#each games}}
          {{#unless completed}}
          {{> games/game-block completed=false}}
          {{/unless}}
          {{/each}}

        </ul>
      </div>
      <div class="col-sm-1"></div>

      <div class="col-sm-5">
        <h2>Completed</h2>
        <ul id="completedGames">
          {{#each games}}
          {{#if completed}}
          {{> games/game-block completed=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 formDiv nes-field">
        <form class="formInput" action="">
          <button class="submit nes-balloon from-left nes-pointer">Add Game to Backlog!</button>
          <div>
            <label for="gameCreate"></label>
            <input class="nes-input" type="text" name="name" id="gameCreate" maxlength="22">
          </div>
        </form>
      </div>
    </div>

  </main>
</div>